{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for monorepo */
    "baseUrl": ".",
    "paths": {
      "@frobnitz/controls/*": ["packages/controls/src/*"],
      "@frobnitz/common/*": ["packages/common/src/*"],
      "@frobnitz/pages/*": ["packages/pages/src/*"]
    }
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.d.ts", "packages/*/src/**/*.tsx", "packages/*/src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {"path": "./packages/controls"},
    {"path": "./packages/common"},
    {"path": "./packages/pages"}
  ]
}