{
  "name": "frobnitz-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Vue + TypeScript monorepo for web application frontend development",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "vue": "^3.3.0",
    "vue-tsc": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
